extends ../layout

block content
  section
    - for(var i = events.length-1; i>=0; i--)
      .section-item(class= events[i].isUpcoming()?"":"disable")
        .section-date
          strong.date #{events[i].startDate()}
          br
          | #{events[i].startDateNameOfDay()}
          br
          | #{events[i].startTime()}
        h3 #{events[i].title}
        h5.section-description Автор: #{events[i].getCreatorName()}
        .section-nav
          a.btn.pull-left(href='#read-more') Прочети повече
          .share-widget.pull-left share widget here
          br.clear
      hr
    //
      a.pull-right(href='/events')
      i.icon-plus-sign
      | Виж още събития
    br.clearfix
