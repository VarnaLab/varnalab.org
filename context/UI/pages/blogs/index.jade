extends ../layout

block content
  section
    .row
      - for(var i = 0; i<blogs.length; i++)
        .span4
          .section-item
            include ../partials/blogPost
  - if(pageNumber > 0)
    a(href="/blogs/#{pageNumber-1}").btn previous
  - if(blogsCount > blogs.length+pageNumber*blogsLimit)
    a(href="/blogs/#{pageNumber+1}").btn next