extends ../layout
block content
  section
    .section-item
        .section-date
          strong.date #{blog.createdDate()}
          br
          | #{blog.createdNameOfDay()}
          br
          | #{blog.createdTime()}
        h2 #{blog.title}
        h5.section-description Автор: #{blog.author}
        article!= blog.content
        .section-nav
          //
            a.btn.pull-left(href='#') Прочети повече
          //- .share-widget.pull-left.fb-like(data-href="http://127.0.0.1:8080/blogs/#{blog.slugifiedUrl()}", data-send="true", data-width="700", data-show-faces="false")
          #disqus_thread
          script
            var disqus_shortname = 'varnalab';
            (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
          noscript
            Please enable JavaScript to view the a(href="http://disqus.com/?ref_noscript") comments powered by Disqus.
          br.clear
      hr
      br.clearfix
