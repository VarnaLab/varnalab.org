block scripts
  script(src="/public/js/register.bundle.js")

block content
  section
    form.login_form
      fieldset
        legend register
        input(type="text", name="email", placeholder="email")
        input(type="password", name="password", placeholder="password")
        input(type="password", name="accessToken", placeholder="invitation code")
        input(type="submit", value="register")
  